<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.cumt.cs.trajectory.dao.TrajectoryPointDao">
    <resultMap id="TrajectoryPointMap" type="TrajectoryPoint" autoMapping="true">
        <id column="id" property="id"/>
        <result column="longitude" property="longitude"/>
        <result column="latitude" property="latitude"/>
        <result column="generate_time" property="generateTime"/>
    </resultMap>

    <sql id="ALL_COLUMN_LIST" >
        id,longitude,latitude,generate_time
    </sql>

    <insert id="insertTrajectoryPoint" parameterType="TrajectoryPoint" useGeneratedKeys="true" keyProperty="id">
        INSERT  INTO trajectory_point(longitude,latitude,generate_time)
        VALUES (#{longitude},#{latitude},#{generateTime})
    </insert>

    <insert id="insertTrajectoryPoints" parameterType="java.util.List" useGeneratedKeys="true">
        INSERT  INTO trajectory_point(longitude,latitude,generate_time)
        VALUES
        <foreach collection="list" separator="," item="item" index="index">
            (#{item.longitude},#{item.latitude},#{item.generateTime})
        </foreach>
    </insert>

    <delete id="deleteTrajectoryPointById" parameterType="int">
        DELETE FROM trajectory_point WHERE id=#{id}
    </delete>

    <select id="selectTrajectoryPointById" parameterType="int" resultType="TrajectoryPoint">
        SELECT
        <include refid="ALL_COLUMN_LIST"/>
        FROM trajectory_point
        WHERE id=#{id}
    </select>

    <select id="selectTrajectoryPoints" resultType="TrajectoryPoint" resultMap="TrajectoryPointMap">
        SELECT
        <include refid="ALL_COLUMN_LIST"/>
        FROM trajectory_point
    </select>

    <select id="getTotal" resultType="int">
        SELECT count(*)
        FROM trajectory_point
    </select>

</mapper>