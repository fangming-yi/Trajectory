<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.cumt.cs.trajectory.dao.UserDao">
    <resultMap id="UserMap" type="User" autoMapping="true">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="username" property="username"/>
        <result column="gender" property="gender"/>
        <result column="phone" property="phone"/>
        <result column="email" property="email"/>
        <result column="login_num" property="loginNum"/>
        <result column="last_login_time" property="lastLoginTime"/>
    </resultMap>

    <sql id="ALL_COLUMN_LIST">
        id,userId,username,gender,phone,email,login_num,lastLoginTime
    </sql>

    <insert id="insertUser" parameterType="User" useGeneratedKeys="true" keyProperty="id">
        <![CDATA[
        INSERT INTO user(user_id,username,gender,phone,email)
        VALUES(#{userId},#{username},#{gender},#{phone},#{email})
        ]]>
    </insert>

    <delete id="deleteUserById" parameterType="int">
        UPDATE user
        set status=0
        WHERE id=#{id}
    </delete>

    <delete id="deleteUserByUserId" parameterType="java.lang.String">
        UPDATE user
        set status=0
        <where>
            <if test="userId!=null">AND user_id=#{userId}</if>
        </where>
    </delete>

    <update id="updateUser" parameterType="User">
        UPDATE user
        <set>
            <if test="userId!=null">user_id=#{userId},</if>
            <if test="username!=null">username=#{username},</if>
            <if test="gender!=null">gender=#{gender},</if>
            <if test="phone!=null">phone=#{phone},</if>
            <if test="email!=null">email=#{email},</if>
            <if test="loginNum!=null">login_num=#{loginNum},</if>
        </set>
        WHERE id=#{id}
    </update>

    <select id="getUserById" parameterType="int" resultType="User" resultMap="UserMap">
        <![CDATA[
        SELECT
        u.id AS id,
        u.user_id AS userId,
        u.username AS username,
        u.gender AS gender,
        u.phone AS phone,
        u.email AS email,
        u.login_num AS loginNm,
        u.last_login_time AS lastLoginTime,
        a.status AS idAdmin
        FROM user as u
        left join admin as a
        ON u.user_id=a.user_id
        WHERE u.id=#{id} AND u.status=1
        ]]>
    </select>

    <select id="getUserByUserId" parameterType="java.lang.String" resultType="User">
        <![CDATA[
        SELECT
        u.id AS id,
        u.user_id AS userId,
        u.username AS username,
        u.gender AS gender,
        u.phone AS phone,
        u.email AS email,
        u.login_num AS loginNm,
        u.last_login_time AS lastLoginTime,
        a.status AS idAdmin
        FROM user as u
        left join admin as a
        ON u.user_id=a.user_id
        WHERE u.user_id=#{userId} AND u.status=1
        ]]>
    </select>
</mapper>